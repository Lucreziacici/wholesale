/**app.wxss**/

.white {
  background: white;
}

.common-color {
  color: #9c855c;
}

/*公共按钮 */

.common-bottom {
  position: fixed;
  bottom: 0;
  width: 750rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #9c855c;
  color: white;
}

.common-bottom navigator {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 公共input  */

.information-input-list {
  padding: 0 30rpx;
}

.information-input-item {
  display: flex;
  align-items: center;
  height: 100rpx;
  border-bottom: 1rpx solid #e9e9e9;
  font-size: 11pt;
  color: #696969;
}

.information-input-name {
  width: 180rpx;
}

.information-input-input {
  width: 500rpx;
}

.information-input-input input {
  color: #333;
}

/* 分类弹框  */

.modalbg {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 2;
}

.classify-box {
  background-color: white;
  position: fixed;
  width: 650rpx;
  height: 100%;
  right: 0;
  top: 0;
  z-index: 20000;
  transition: All 0.4s linear;
  -webkit-transition: All 0.4s linear;
  transform: rotate(0deg) scale(1) translate(100%, 0%);
  -webkit-transform: rotate(0deg) scale(1) translate(100%, 0%);
}

.classify-header {
  height: 100rpx;
  background: #f1f1f1;
  width: 100%;
  padding: 0 0 0 30rpx;
  display: flex;
  align-items: center;
}

.classify-list {
  display: flex;
  flex-wrap: wrap;
}

.classify-list-title {
  padding: 20rpx 0 20rpx 20rpx;
}

.classify-item {
  width: 210rpx;
}

.classify-text {
  padding: 20rpx 0rpx;
  border-radius: 10rpx;
  margin: 0 0 20rpx 20rpx;
  text-align: center;
  background-color: #efefef;
  font-size: 10pt;
}

.classifyactive {
  background-color: #df061a;
  color: white;
}

.classify-bottom {
  position: fixed;
  bottom: 0;
  height: 80rpx;
  display: flex;
  /* justify-content: space-around; */
  align-items: center;
  width: 100%;
  border-top: 1px solid #eee;
  padding: 0;
  margin: 0;
}

.classify-bottom view {
  font-size: 10pt;
  width: 325rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}

.classify-bottom view:nth-child(2) {
  background-color: #df061a;
  height: 100%;
  color: white;
}

/*订单项  */

.order-item {
  padding: 20rpx;
  margin: 10rpx 0 0 0;
}

.order-item-header navigator {
  padding: 0 0 20rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 10pt;
  border-bottom: 1px solid #eee;
}

.order-item-header navigator image {
  width: 12rpx;
  height: 20rpx;
  margin: 0 0 0 10rpx;
}

.order-status {
  color: #9c855c;
  font-size: 11pt;
}

.order-orderid {
  color: #aaa;
}

.order-item-message {
  border-bottom: 1px solid #eee;
}

.order-item-message navigator {
  padding: 20rpx 0;
  display: flex;
  justify-content: space-between;
}

.order-product-image image {
  width: 160rpx;
  height: 180rpx;
}

.order-product-message {
  width: 420rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}

.order-product-message view:nth-child(1) {
  color: #1d1d1d;
  font-size: 10pt;
  line-height: 36rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  height: 72rpx;
  overflow: hidden;
}

.order-product-message view:nth-child(2) {
  color: #858585;
  font-size: 9pt;
}

.order-product-message view:nth-child(3) {
  color: #9c855c;
  font-size: 13pt;
}

.order-product-num {
  font-size: 10pt;
}

.order-footer {
  font-size: 10pt;
  padding: 20rpx 0;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.order-footer text {
  font-size: 12pt;
}

.order-item-button {
  display: flex;
  justify-content: flex-end;
  padding: 30rpx 0;
  border-bottom: 1px solid #eee;
}

.order-item-button text {
  font-size: 10pt;
  border: 1px solid #aaa;
  border-radius: 10rpx;
  padding: 10rpx 30rpx;
  margin: 0 0 0 10rpx;
}

.model_box{
  z-index: 100;
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center;
   top: 0; 
  left: 0;
  right: 0;
  margin: 200rpx 0 0 0;
}
.model {
  width: 600rpx;
  border-radius: 20rpx;
  padding: 0 34rpx;


}

.model_header {
  margin: 44rpx 0;
  text-align: center;
  font-size: 12pt;
  color: #202020;
  font-weight: 600;
}

.tips {
  font-size: 10pt;
  color: #323232;
}

.input input {
  background-color: #f7f7f7;
  color: #222;
  font-size: 10pt;
  height: 74rpx;
  width: 580rpx;
  margin: 24rpx 0 0 0;
  padding: 0 0 0 20rpx;
}

.button {
  background-color: #e23f41;
  height: 74rpx;
  color: white;
  width: 600rpx;
  margin: 24rpx 0 0 0;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 10pt;
  border-radius: 10rpx;
}
.model_footer{
  margin: 40rpx 0 32rpx 0;
  color: #c37f55;
  font-size: 8pt;
}
