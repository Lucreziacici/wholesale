/* pages/classify/classify.wxss */

page {
  border-top: 1px solid #efefef;
  /* height: 1334rpx; */
  overflow: hidden;
  /* width: 750rpx; */
}

.classify {
  display: flex;
  justify-content: space-around;
  height: 99%;
  position: absolute;
}

.classifyList {
  width: 164rpx;
  padding: 40rpx 18rpx 0;
  display:flex;
  justify-content: flex-start;
  flex-direction: column;

  border-right: 1px solid #efefef;
}

.classifyItem {
  padding: 12rpx 20rpx;
  margin: 20rpx 0 0 0;
  border-radius: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.active {
  background-color: #000;
}

.classifyItem text {
  color: #333;
  font-size: 10pt;
}

.active text {
  color: #fff;
}

.classifyBox {
  width: 550rpx;
  /* padding: 20rpx 0rpx 0 30rpx; */
  /* margin: 0 0 0 10rpx; */
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: column;
  overflow-y: auto;
  height: 100%;
}

.classifyBoxTitle {
  margin: 20rpx 0 0 30rpx;
  font-size: 10pt;
  color: #404040;
  font-weight: bolder;
}

.classifyBoxList {
  display: flex;
  flex-wrap: wrap;
  padding:0 0 20rpx 0;
  width: 480rpx;

}

.classifyBoxItem {
  margin: 20rpx 0 0 0;
  width: 160rpx;
}

.classifyBoxItem navigator {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.classifyBoxItem navigator image {
  width: 100rpx;
  height: 100rpx;
  /* border-radius: 100%; */
  padding: 10rpx;
}

.classifyBoxItem navigator text {
  font-size: 8pt;
  margin: 20rpx 0 0 0;
  color: #2f2f2f;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
}
