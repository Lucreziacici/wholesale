/**index.wxss**/

page {
  background-color: white;
  width: 100%;
  height: 100%;
}

.search-box {
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  width: 100%;
  top: 0;
  background: rgba(255, 255, 255, 0.3);
  z-index: 10000;
}

.search-item {
  width: 600rpx;
  border-radius: 100rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 10pt;
  background: #f7f7f7;
  opacity: 0.7;
}

.search-item image {
  width: 30rpx;
  height: 30rpx;
  margin: 0 20rpx 0 0;
}

.scroll_box {
  width: 100%;
  height: 100%;
}

.swiper {
  width: 750rpx;
}

.slide-image {
  width: 750rpx;
}

.swiper .wx-swiper-dot {
  display: inline-flex;
  height: 21rpx;
  width: 21rpx;
  margin-left: 20rpx;
  justify-content: space-between;
  background-color: #eff5f5;
}

.swiper .wx-swiper-dot::before {
  content: '';
  flex-grow: 1;
  background: #eff5f5;
  border-radius: 100rpx;
}

.swiper .wx-swiper-dot-active {
  border-radius: 30rpx;
  width: 40rpx;
}

.swiper .wx-swiper-dot-active::before {
  background: #fa4686;
}

.notice {
  width: 750rpx;
  /* margin: 20rpx 0 0 0; */
}

.notice image {
  width: 750rpx;
}

.navigation {
  display: flex;
  width: 750rpx;
  padding: 20rpx 0;
  justify-content: space-around;
  background-color: #fff;
}

.navigation-item {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.navigation image {
  width: 92rpx;
  height: 92rpx;
}

.navigation text {
  font-size: 26rpx;
  margin: 20rpx 0 0 0;
  color: #181717;
}

.special {
  width: 750rpx;
  /* margin: 20rpx 0 0 0; */
}

.special-title {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: white;
  height: 74rpx;
  margin: 20rpx 0;
}

.special-line {
  width: 70rpx;
  height: 2rpx;
  margin: 0 28rpx;
  background-color: #d1d1d1;
}

.special-title text {
  font-size: 13pt;
  font-weight: bold;
}

.special-img image {
  width: 750rpx;
  display: block;
}

