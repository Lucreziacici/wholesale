.brandbg{
  width: 750rpx;
  height: 290rpx;
}
.brandbg image{
  width: 100%;
  height: 100%;
}
.brandinfo{
  display: flex;
   justify-content: space-between; 
  padding: 0 42rpx;
  
}
.brandinfo image{
  width: 160rpx;
  height: 160rpx;
  border: 1px solid #d4d4d4;
  border-radius: 100%;
  margin: -40rpx 0 0 0;
  padding: 10rpx;
  background: white

}
.collect{
  display: flex;
  justify-content: center;
  align-items: center;
  
}
.collect image{
  width: 50rpx;
  height: 50rpx;
  border-radius: 0;
  border: 0;
  margin: 0 0 0 500rpx ï¼›
}
.brandinfo_message{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  
  margin: 20rpx 0 0 42rpx;
}
.brandinfo_message text:nth-child(1){
  color: #0e0e0e;
   font-size: 12pt;
}
.brandinfo_message text:nth-child(2){
  color: #575757;
  font-size: 11pt;
  margin: 10rpx 0 0 0;
}
.brand_des{
  padding: 0 42rpx;
  font-size: 10pt;
  color: #575757;
}
.commodity_list {
  /* margin: 120rpx 0 0 0; */
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
}