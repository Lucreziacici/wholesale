/* pages/footprint/footprint.wxss */
page{
  background-color: #f7f7f7;
}
.title{
  padding: 20rpx 20rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: white;
  border-top: 1px solid #eee;
}
.tip{
  font-size: 10pt;
  color: #6f6f6f;

}
.deletebutton{
  color: #2d2d2d;
  border: 1px solid #2d2d2d;
  border-radius: 10rpx;
  padding: 10rpx 20rpx;
  font-size: 10pt;
}
.productlist{
  margin: 30rpx 0 0 0;
  background: white;
  padding: 10rpx 20rpx;
}
.productitem{
  padding: 10rpx 20rpx;
  border-bottom: 1px solid #eee;

}
.productitem:last-child{
  border: 0;
}
.productitem navigator{
  display: flex;
  align-items: center;
}
.productimg image{
  width: 120rpx;
  height: 150rpx;
}
.producttitle{
  font-size: 10pt;
   height: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-start;
  padding: 0rpx 10rpx;
  color: #333;
}
.nomore {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 10pt;
  color: #aaa;
  padding: 20rpx 0;
}
.noresult {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  font-size: 10pt;
  color: #aaa;
  margin: 0 0 200rpx 0;
}

.noresult image {
  width: 190rpx;
  height: 190rpx;
  margin: 200rpx 0 0 0;
}

.link{
  border-bottom: 1px solid #9a8c65;
  color: #9a8c65;
}