/* pages/refund/refund.wxss */
page{
  background: #e9e9e9;
}
.refund_item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  font-size: 10pt;
  margin: 10rpx 0 0 0;
  background: white;

}
.refund_box{
    display: flex;
  justify-content: center;
  align-items: center;
}
.refund_item .add{
  border: 1px solid #aaa;
  width: 50rpx;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.num{
  margin: 0 10rpx;

}

textarea{
  width: 500rpx;
  height: 35rpx;
  /* border: 1px solid #aaa;  */
  overflow-x: auto;
  line-height: 35rpx;
  vertical-align: middle;


}
.refund_button{
  position: fixed;
  bottom: 0;
  width: 100%;
  
}
.refund_button button{
  background:#9c855c;
  border: 0;
  border-radius: 0;
  color: white;
  font-size: 10pt;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}



.detail_img image{
  width: 100rpx;
  height:120rpx;
}
.detail_msg{
  display: flex;
  flex-direction: column;
  width: 550rpx;

}