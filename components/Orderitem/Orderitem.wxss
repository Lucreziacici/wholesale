/*订单项  */

.white {
  background: white;
}

.order-item {
  padding: 20rpx;
  margin: 10rpx 0 0 0;
}

.order-item-header navigator {
  padding: 0 0 20rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 10pt;
  border-bottom: 1px solid #eee;
}

.order-item-header navigator image {
  width: 12rpx;
  height: 20rpx;
  margin: 0 0 0 10rpx;
}

.order-status {
  color: #9c855c;
  font-size: 11pt;
}

.order-orderid {
  color: #aaa;
}

.order-item-message {
  border-bottom: 1px solid #eee;
}

.order-item-message navigator {
  padding: 20rpx 0;
  display: flex;
  justify-content: space-between;
}

.order-product-image image {
  width: 160rpx;
  height: 180rpx;
}

.order-product-message {
  width: 420rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}

.order-product-message view:nth-child(1) {
  color: #1d1d1d;
  font-size: 10pt;
  line-height: 36rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  height: 72rpx;
  overflow: hidden;
}

.order-product-message view:nth-child(2) {
  color: #858585;
  font-size: 9pt;
}

.order-product-message view:nth-child(3) {
  color: #9c855c;
  font-size: 13pt;
  display: flex;
  align-items:center;

}

.order-product-message view:nth-child(3)  text {
  font-size: 10pt;
  color: #333;
}

.order-product-num {
  font-size: 10pt;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-end;
}

.order-product-num .button {
  border: 1px solid #aaa;
  border-radius: 10rpx;
  padding:5rpx 10rpx;
  margin: 0 0 0 10rpx;
  font-size: 8pt;
  color: #333;
}

.order-footer {
  font-size: 10pt;
  padding: 20rpx 0;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.order-footer text {
  font-size: 12pt;
}

.order-item-button {
  display: flex;
  justify-content: flex-end;
  padding: 30rpx 0;
  border-bottom: 1px solid #eee;
}

.order-item-button text,.text {
  font-size: 10pt;
  border: 1px solid #aaa;
  border-radius: 10rpx;
  padding: 10rpx 30rpx;
  margin: 0 0 0 10rpx;
  display: flex;
  align-items: center;
}
.order-item-button button{
  outline: 0;
  border: 0;
  background: transparent;
   font-size: 10pt;
   padding: 0;
   line-height: 40rpx;
}
button::after{
  outline: 0;
  border: 0;
  background: transparent;
   font-size: 10pt;
}
.contact {
  position: relative;
  display: flex;
}

contact-button {
  position: absolute;
  opacity: 0;
}

.contact contact-button:nth-child(2) {
  margin: 0 0 0 30rpx;
}

.contact contact-button:nth-child(3) {
  margin: 0 0 0 60rpx;
}

.contact contact-button:nth-child(4) {
  margin: 0 0 0 90rpx;
}

.contact contact-button:nth-child(5) {
  margin: 0 0 0 120rpx;
}
