/* components/Toast/Toast.wxss */

/*弹框  */

.toast_content_box {
  display: flex;
  width: 100%;
  height: 40%;
  justify-content: center;
  align-items: center;
  position: fixed;
  z-index: 999;
  bottom: 100rpx;
}

.toast_content {
  width: 50%;
  padding: 20rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 20rpx;
}

.toast_content_text {
  height: 100%;
  width: 100%;
  color: #fff;
  font-size: 10pt;
  text-align: center;
}
